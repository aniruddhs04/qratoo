<body>

    <div class="wrapper">
        <div class="sidebar" data-color="white" data-image="img/header.jpg">

            <!--
        
                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag
        
            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/" class="logo-wrap">
                        <img class="logo-img logo-img-main" style="height: 80px; width: 230px;" src="img/logo.png" />

                    </a>
                </div>

                <ul class="nav">

                    <li>
                        <a href="user">
                            <i class="pe-7s-user"></i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li>
                        <a href="dashboard">
                            <i class="pe-7s-graph"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href="table">
                            <i class="pe-7s-note2"></i>
                            <p>Certificates</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="typography">
                            <i class="pe-7s-news-paper"></i>
                            <p>Notebook</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Qrato</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/logout">
                                    <p>Log out</p>
                                </a>
                            </li>
                            <li class="separator hidden-lg hidden-md"></li>
                        </ul>
                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-12">
                            <form action="/diary" method="post">
                                <div class="form-group">
                                    <label>Type your message here</label>
                                    <input type="text" class="form-control" name="text" placeholder="Your message here">
                                    <input type="hidden" class="form-control" name="date" id="theDate">

                                    <script type="text/javascript">
                                        var date = new Date();

                                        var day = date.getDate();
                                        var month = date.getMonth() + 1;
                                        var year = date.getFullYear();

                                        if (month < 10) month = "0" + month;
                                        if (day < 10) day = "0" + day;

                                        var today = year + "-" + month + "-" + day;
                                        document.getElementById("theDate").value = today;    
                                    </script>
                                </div>
                                <button type="submit" class="btn btn-info btn-fill pull-right">Save Message</button>
                            </form>
                        </div>
                    </div>
                    <div class="row" style="padding-top: 40px;">
                        <div class="col-md-12" >
                            <div class="card" style="background-image: url(http://www.wallpapers4u.org/wp-content/uploads/notebook_texture_fields_lines_stripes_75767_1920x1080.jpg); color: black !important;height: 500px !important ">
                                <div class="header">
                                    <h4 class="title">My Diary</h4>
                                </div>
                                <div class="content">


                                    <div class="content">

                                        <% _.forEach(user.diary.reverse(),function(val){ %>
                                            <div class="typo-line">
                                                <h2>
                                                    <p class="category" style="padding-bottom:20px " >
                                                        <%=val.date%>
                                                    </p>
                                                    <small style="padding-left: 70px; ">
                                                        <%= val.text %>
                                                    </small>
                                                    <hr>
                                                </h2>
                                            </div>

                                            <% }) %>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>




            </div>
        </div>


</body>
